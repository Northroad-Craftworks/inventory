    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["test"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std"
        }
    ]
}